{
  "name": "newar-recording-bot",
  "version": "1.0.0",
  "description": "Meeting recording bot using Playwright browser automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:playwright --external:playwright-extra --external:puppeteer-extra-plugin-stealth",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": ["recording", "bot", "playwright", "google-meet", "teams"],
  "author": "Newar Team",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.56.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "redis": "^5.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "esbuild": "^0.25.11",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
